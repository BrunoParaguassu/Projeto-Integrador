<div class='container mt-5'>
  <div class='row justify-content-center'>
    <div class='col-md-6'>
      <div class='card'>
        <div class='card-header'>
          <h3 class='text-center'>Login</h3>
        </div>
        <div class='card-body'>
          {{#if messages.error}}
            <div class='alert alert-danger'>
              {{messages.error}}
            </div>
          {{/if}}

          <form action='/auth/login' method='POST'>
            <div class='form-group mb-3'>
              <label for='email'>Email:</label>
              <input
                type='email'
                class='form-control'
                id='email'
                name='email'
                required
              />
            </div>

            <div class='form-group mb-3'>
              <label for='password'>Senha:</label>
              <input
                type='password'
                class='form-control'
                id='password'
                name='password'
                required
              />
            </div>

            <div class='d-grid gap-2'>
              <button type='submit' class='btn btn-primary'>Entrar</button>
            </div>
          </form>

          <div class='text-center mt-3'>
            <p>NÃ£o tem uma conta? <a href='/auth/register'>Registre-se</a></p>
            <p><a href='/auth/forgot-password'>Esqueceu sua senha?</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>