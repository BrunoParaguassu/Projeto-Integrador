<main class='main'>
  <form
    action='/admin/atualizar-produto'
    method='POST'
    class='cadastro'
    enctype='multipart/form-data'
  >
    <input type='hidden' name='id' value='{{products.id}}' />
    <h2>Editar Produto</h2>
    <div class='cadastro__box'>
      <label class='cadastro__label' for='name_prod'>Nome</label>
      <input
        class='cadastro__input'
        type='text'
        id='name_prod'
        name='name_prod'
        value='{{products.name_prod}}'
        required
        maxlength='30'
      />
    </div>
    <div class='cadastro__box'>
      <label class='cadastro__label' for='price_prod'>Preço</label>
      <input
        class='cadastro__input'
        type='number'
        step='0.01'
        id='price_prod'
        name='price_prod'
        value='{{products.price_prod}}'
        required
      />
    </div>
    <div class='cadastro__box'>
      <label class='cadastro__label' for='category_prod'>Categoria</label>
      <input
        class='cadastro__input'
        type='text'
        id='category_prod'
        name='category_prod'
        value='{{products.category_prod}}'
        required
        maxlength='30'
      />
    </div>
    <div class='cadastro__box'>
      <label class='cadastro__label' for='description_prod'>Descrição</label>
      <textarea
        class='cadastro__input'
        id='description_prod'
        name='description_prod'
        required
        maxlength='255'
      >{{products.description_prod}}</textarea>
    </div>
    <div class='cadastro__box'>
      <label class='cadastro__label' for='image_prod'>Imagem</label>
      <input
        class='cadastro__input'
        type='file'
        id='image_prod'
        name='image_prod'
        accept='image/*'
      />
      <small>Deixe em branco para manter a imagem atual</small>
    </div>
    <button type='submit' class='cadastro__btn'>Atualizar</button>
  </form>
  <div class='cadastro--btn-back'>
    <a href='/produtosLista'>Voltar</a>
  </div>
</main>